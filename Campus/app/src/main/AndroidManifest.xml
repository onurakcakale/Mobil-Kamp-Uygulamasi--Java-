<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.campus">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/campus_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/campus_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Campus">
        <activity android:name=".KampAramaActivity" />
        <activity android:name=".GonderiActivity" />
        <activity android:name=".YorumlarActivity" />
        <activity android:name=".AnasayfaActivity" />
        <activity android:name=".KaydolActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>