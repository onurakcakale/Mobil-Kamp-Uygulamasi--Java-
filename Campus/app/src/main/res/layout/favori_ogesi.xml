<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/favori_ogeleri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/favori_kamp_resim"
            android:layout_width="80dp"
            android:layout_height="81dp"
            android:src="@drawable/ic_image"
            android:layout_marginLeft="7dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favori_kamp_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kamp Adı"
                android:textSize="18dp"
                android:lines="1"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/Black"
                android:layout_marginTop="19dp"
                android:paddingLeft="15dp"/>

            <TextView
                android:id="@+id/favori_sehir_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Şehir Adı"
                android:textSize="15dp"
                android:lines="1"
                android:layout_marginBottom="18dp"
                android:textColor="@color/DarkGray"
                android:paddingLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/begeni_favori"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_like2"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/Black"
        android:layout_below="@id/favori_ogeleri"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>