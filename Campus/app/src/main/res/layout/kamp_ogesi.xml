<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/kamp_ogeleri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/kamp_resmi_ogesi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/White"
            android:src="@drawable/ic_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kamp_adi_ogesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kamp Adı"
                    android:paddingLeft="7dp"
                    android:textSize="18dp"
                    android:lines="1"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/Black"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/sehir_adi_kamp_ogesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="İstanbul"
                    android:paddingLeft="7dp"
                    android:lines="1"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/DarkGray"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/txt_begeni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="13dp"
                    android:paddingRight="7dp"
                    android:lines="1"
                    android:text="1000 Beğeni"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_yorum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="7dp"
                    android:paddingRight="7dp"
                    android:textSize="14dp"
                    android:lines="1"
                    android:text="2000 Yorum"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>