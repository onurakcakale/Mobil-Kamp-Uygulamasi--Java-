<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cerceve.AnasayfaFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <ImageView
                android:src="@drawable/logocampus"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="40dp"/>

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar_HomeFragment">

        <TextView
            android:id="@+id/yazi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kamp Yolculuğunuzdaki Popüler Şehirler"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyler_view_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yazi"/>
    </RelativeLayout>

</RelativeLayout>